import java.io.*;

public class WriteInsideFile {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		try {
			FileWriter fw=new FileWriter("D://san/name.txt");
			fw.write("Hello World");
			System.out.println("Writing is complete");
			fw.close();
			FileReader fr=new FileReader("D://san/name.txt");
			int i;
		while(i=fr.read())!=-1)
			System.out.print((char)i);    
			fr.close();    
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

}
